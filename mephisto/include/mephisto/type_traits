#ifndef MEPHISTO_TYPE_TRAITS
#define MEPHISTO_TYPE_TRAITS

#include <alpaka/alpaka.hpp>

namespace mephisto {

namespace buf_traits {

template <typename T> struct is_host { static const bool value = false; };

template <typename T> struct is_accelerator {
  static const bool value = false;
};
}  // namespace buf_traits

namespace entity_traits {
template <typename T>
struct device {
  using type = typename alpaka::dev::traits::DevType<typename T::acc_t>::type;
};
template <typename T>
struct acc {
  using type = typename T::acc_t;
};
}  // namespace entity_traits
}  // namespace mephisto

#endif
